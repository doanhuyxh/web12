
<!doctype html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <title>Login | PTE88 Administrator Manager</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="Themesbrand" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/Areas/AdministratorManager/Assets/images/favicon.ico">

    <!-- Bootstrap Css -->
    <link href="~/Areas/AdministratorManager/Assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="~/Areas/AdministratorManager/Assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="~/Areas/AdministratorManager/Assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />
    <link href="~/Areas/AdministratorManager/Assets/libs/toastr/build/toastr.min.css" rel="stylesheet" />

</head>

<body>
    <div class="account-pages my-5 pt-sm-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card overflow-hidden">
                        <div class="bg-primary bg-soft">
                            <div class="row">
                                <div class="col-7">
                                    <div class="text-primary p-4">
                                        <h5 class="text-primary">Chào mừng đã trở lại !</h5>
                                        <p>Đăng nhập <b class="text-danger">PTE88</b>.</p>
                                    </div>
                                </div>
                                <div class="col-5 align-self-end">
                                    <img src="~/Areas/AdministratorManager/Assets/images/profile-img.png" alt="" class="img-fluid">
                                </div>
                            </div>
                        </div>
                        <div class="card-body pt-0">
                            <div class="auth-logo">
                                <a href="index.html" class="auth-logo-light">
                                    <div class="avatar-md profile-user-wid mb-4">
                                        <span class="avatar-title rounded-circle bg-light">
                                            <img src="~/Areas/AdministratorManager/Assets/images/logo-light.svg" alt="" class="rounded-circle" height="34">
                                        </span>
                                    </div>
                                </a>

                                <a href="index.html" class="auth-logo-dark">
                                    <div class="avatar-md profile-user-wid mb-4">
                                        <span class="avatar-title rounded-circle bg-light">
                                            <img src="~/Areas/AdministratorManager/Assets/images/logo.svg" alt="" class="rounded-circle" height="34">
                                        </span>
                                    </div>
                                </a>
                            </div>
                            <div class="p-2">
                                <form class="form-horizontal">

                                    <div class="mb-3">
                                        <label for="username" class="form-label">Tài khoản</label>
                                        <input type="text" class="form-control" id="Username" placeholder="Tài khoản">
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Mật khẩu</label>
                                        <div class="input-group auth-pass-inputgroup">
                                            <input type="password" class="form-control" id="Password" placeholder="Mật khẩu" aria-label="Password" aria-describedby="password-addon">
                                            <button class="btn btn-light " type="button" id="password-addon"><i class="mdi mdi-eye-outline"></i></button>
                                        </div>
                                    </div>

                                    <div class="mt-3 d-grid">
                                        <button class="btn btn-primary waves-effect waves-light" id="btnLoginSubmit" type="button">Đăng nhập</button>
                                    </div>

                                </form>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- end account-pages -->
    <!-- JAVASCRIPT -->
    <script src="~/Areas/AdministratorManager/Assets/libs/jquery/jquery.min.js"></script>
    <script src="~/Areas/AdministratorManager/Assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Areas/AdministratorManager/Assets/libs/metismenu/metisMenu.min.js"></script>
    <script src="~/Areas/AdministratorManager/Assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/Areas/AdministratorManager/Assets/libs/node-waves/waves.min.js"></script>
    <script src="~/Areas/AdministratorManager/Assets/libs/toastr/build/toastr.min.js"></script>
    <!-- App js -->
    <script src="~/Areas/AdministratorManager/Assets/js/app.js"></script>
    <script src="~/Areas/AdministratorManager/Assets/js/controller/base.js"></script>
    <script src="~/Areas/AdministratorManager/Assets/js/controller/login.js"></script>
</body>

</html>
