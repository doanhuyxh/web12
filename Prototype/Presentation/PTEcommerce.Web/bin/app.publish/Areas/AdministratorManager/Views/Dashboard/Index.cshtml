
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AdministratorManager/Views/Shared/_Layout.cshtml";
    var sessionGame = (marketplace.SessionGames)ViewBag.SessionGame;
}
<input type="text" id="sessionIdText" class="d-none" value="@(sessionGame != null ? sessionGame.Id : 0)" />
<input type="text" id="valueTimeCountDown" class="d-none" value="@(sessionGame != null ? (sessionGame.CreatedDate.AddSeconds(90) - DateTime.Now).TotalSeconds : 0)" />
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">
                    Phiên đang đặt cược : #<b class="sessionId">@(sessionGame != null ? sessionGame.Id.ToString() : "")
                    <span class="float-end">Thời gian: <span id="timeCountDown"></span></span></b>
                </h4>
                <div class="row mb-3">
                    <div class="col-lg-4">
                        <div class="input-group">
                            <span class="input-group-text">
                                LỚN - NHỎ
                            </span>
                            <select class="form-select" id="sltResult1">
                                <option value="1" @(sessionGame != null && sessionGame.Value == 1 ? "selected" : "")>LỚN</option>
                                <option value="2" @(sessionGame != null && sessionGame.Value == 2 ? "selected" : "")>NHỎ</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="input-group">
                            <span class="input-group-text">
                                ĐÔI - ĐƠN
                            </span>
                            <select class="form-select" id="sltsltResult2">
                                <option value="3" @(sessionGame != null && sessionGame.Value2 == 3 ? "selected" : "")>ĐÔI</option>
                                <option value="4" @(sessionGame != null && sessionGame.Value2 == 4 ? "selected" : "")>ĐƠN</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <button type="button" class="btn btn-success" id="btnChangeResultSession">Thay đổi kết quả</button>
                    </div>
                </div>
                <div class="row mb-2 mt-3">
                    <h4 class="card-title mb-2">Danh sách đặt cược phiên #<span class="sessionId">@(sessionGame != null ? sessionGame.Id.ToString() : "")</span></h4>
                    <div class="col-lg-12">
                        <table class="table table-bordered" id="tblHistoryPlaySession"></table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
