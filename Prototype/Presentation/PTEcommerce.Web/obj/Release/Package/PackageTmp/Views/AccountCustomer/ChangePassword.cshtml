
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col position-relative page-content">

    <!--background -->
    <div class="coverimg center-autow-img h-100 w-100 start-0 top-0 position-absolute" style="background-image: url(&quot;assets/img/orange.png&quot;);">
        <img src="~/Assets/images/bg-hago.png" alt="" style="display: none;">
    </div>
    <!--background ends -->
    <!-- content page -->
    <div class="row justify-content-center h-100">
        <div class="col-12 col-md-6 col-lg-4 col-xxl-3 align-self-center">
            <h2 class="text-center">Đổi mật khẩu</h2>
            <p class="text-center text-secondary mb-4">Vui lòng nhập đầy đủ thông tin</p>
            <div class="card bg-blur border-0 mb-4">
                <div class="card-body">
                    <!-- form elements -->
                    <form>

                        <div class="form-group">
                            <span class="small">Mật khẩu cũ</span>
                            <input type="password" placeholder="Nhập mật khẩu cũ" id="passwordOld" class="form-control border-width-1" />
                        </div>

                        <div class="mb-3">
                            <span class="small">Mật khẩu mới</span>
                            <input type="password" placeholder="Nhập mật khẩu mới" id="passwordNew" class="form-control border-width-1" />
                        </div>

                        <a href="javascript:void(0)" class="btn btn-lg btn-theme w-100 " id="btnChangePassword">Đổi mật khẩu</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- content page ends -->
</div>
