
@{
    ViewBag.Title = "ĐĂNG NHẬP";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


<div class="row h-100">
    <div class="col-12 mx-auto text-center">
        <div class="row h-100">
            <div class="col-10 col-sm-8 col-md-6 col-lg-4 col-xl-3 mx-auto align-self-center">
                <h2 class="text-center mb-4"><img src="/Assets/assets/images/HAMEDIA.png" class="img w-100"></h2>
                <div class="card card-light shadow-sm mb-4">
                    <div class="card-body">
                        <form class=" was-validated">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="username" placeholder="Nhập tài khoản" />
                                <label for="username">Tài khoản</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="password" class="form-control" id="password" />
                                <label for="password">Password</label>
                            </div>
                        </form>

                        <div class="d-grid">
                            <a href="/quen-mat-khau" class="link mb-3">
                                Quên mật khẩu?
                            </a>
                        </div>

                        <div class="d-grid">
                            <a href="javascript:void(0)" id="btnLogin" class="btn btn-lg btn-default shadow-sm">
                                ĐĂNG NHẬP
                            </a>
                        </div>
                    </div>
                </div>
                <p class="text-center">Chưa có tài khoản <a href="/dang-ky"><b>Đăng ký tài khoản</b></a></p>

            </div>
        </div>

    </div>
</div>
